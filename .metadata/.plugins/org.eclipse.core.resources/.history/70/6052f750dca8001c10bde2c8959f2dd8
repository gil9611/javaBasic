package sec1;

import java.util.Scanner;

public class IfTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int edps, pl, db;		//키보드 입력을 받을 전산, 프로그래밍, 데이터베이스
		int tot, avg;			//총점, 평균
		String hak, dv;			//학점, 장학생종류
		boolean pan;			//합격여부
		Scanner sc = new Scanner(System.in);	//키보드입력
		
		System.out.println("전산의 점수를 입력해주세요.");
		edps = sc.nextInt();
		System.out.println("프로그래밍의 점수를 입력해주세요.");
		pl = sc.nextInt();
		System.out.println("데이터베이스의 점수를 입력해주세요.");
		db = sc.nextInt();
		
		tot = edps + pl + db;
		avg = tot/3;
		
		//학점계산기
		if (avg>=90) {
			//a
			if(avg>=98) {
				hak = "A+";
			} else if (avg>=94) {
				hak = "A";
			} else {
				hak = "A-";
			}
			
		} else if (avg>=80) {
			//b
			if(avg>=88) {
				hak = "B+";
			} else if (avg>=84) {
				hak = "B";
			} else {
				hak = "B-";
			}
		} else if (avg>=70) {
			//c
			if(avg>=78) {
				hak = "C+";
			} else if (avg>=74) {
				hak = "C";
			} else {
				hak = "C-";
			}
		} else if (avg>=60) {
			//d
			if(avg>=88) {
				hak = "D+";
			} else if (avg>=84) {
				hak = "D";
			} else {
				hak = "D-";
			}
		} else {
			//f
			hak= "F";
		}
		
		//합격여부
		if (edps>=70 && pl>=70 && db>=70) {
			pan = true;
		} else {
			pan = false;
		}
		
		//장학생여부
		if (edps>=95 && pl>=95 && db>=95) {
			dv = "특장학생";
		} else if (edps>=95 || pl>=95 || db>=95) {
			dv = "과목장학생";
		} else {
			dv = "일반학생";
		}
		
		System.out.println("당신의 전산 점수 : " +edps);
		System.out.println("당신의 프로그래밍 점수 : " +pl);
		System.out.println("당신의 데이터베이스 점수 : " +db);
		System.out.println("당신의 평균 점수 : " +avg);
		System.out.print("따라서 당신은 ");
		if (pan == true) {
			System.out.print("합격이며 " +dv+ "입니다.");
			
		}
		
		
		
	}

}
