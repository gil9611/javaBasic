package sec1;

import java.util.Scanner;

public class IfTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int edps, pl, db;		//키보드 입력을 받을 전산, 프로그래밍, 데이터베이스
		int tot, avg;			//총점, 평균
		String hak;				//학점.
		boolean pan, dv;		//합격여부, 장학생여부
		Scanner sc = new Scanner(System.in);
		
		System.out.println("전산의 점수를 입력해주세요.");
		edps = sc.nextInt();
		System.out.println("프로그래밍의 점수를 입력해주세요.");
		pl = sc.nextInt();
		System.out.println("데이터베이스의 점수를 입력해주세요.");
		db = sc.nextInt();
		
		tot = edps + pl + db;
		avg = tot/3;
		
		//학점계산기
		if (avg>=90) {
			//a
			if(avg>=98) {
				hak = "A+";
			} else if (avg>=94) {
				hak = "A";
			} else {
				hak = "A-";
			}
			
		} else if (avg>=80) {
			//b
			if(avg>=88) {
				hak = "B+";
			} else if (avg>=84) {
				hak = "B";
			} else {
				hak = "B-";
			}
		} else if (avg>=70) {
			//c
		} else if (avg>=60) {
			//d
		} else {
			//f
		}
		
		//장학생여부
		
		
	}

}
