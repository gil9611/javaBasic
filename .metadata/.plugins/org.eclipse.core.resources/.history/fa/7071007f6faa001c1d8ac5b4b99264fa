package sec2;

public class ForEx2 {

	public static void main(String[] args) {
		// 1~100까지의 3의 배수 합계를 구하여 출력
		int sum = 0;
		int mul = 3;	//배수 값.
		for(int i=1; i<=100; i++) {
			if(i % 3 == 0) {
				sum += i;
			} else {
				continue;
			}
		}
		System.out.println("1부터 100까지의 3의 배수의 합계 : "+sum);
	}

}
